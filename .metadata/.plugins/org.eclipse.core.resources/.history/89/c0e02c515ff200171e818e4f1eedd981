angular.module('appModule')
.factory('todoService', function($http) {
  var service = {};
  
//  var BASE_URL = 'http://localhost:8080/MVCProject/rest/user';

  // private
  var todos = [];

  // public
  service.index = function() {
	    return $http({
	      method : 'GET',
	      url : 'http://localhost:8080/MVCProject/rest/user/1/todo'
	    })
	  };

	  service.create = function(todo) {
		    return $http({
		      method : 'POST',
		      url : 'http://localhost:8080/MVCProject/rest/user/1/todo',
		      headers : {
		        'Content-Type' : 'application/json'
		      },
		      data : todo
		    })
		  };
  
  
  
  service.update = function(edittedTodo){
	  todos.forEach(function(todo, idx, array) {
          if (todo.id === edittedTodo.id) {
              array.splice(idx, 1, edittedTodo);
          }
      });

  }
  
  service.destroy = function(deleteTodo){
      todos.forEach(function(todo, idx, array) {
          if (todo.id === deleteTodo.id) {
              array.splice(idx, 1);
          }
      });
    }

  return service;
})
