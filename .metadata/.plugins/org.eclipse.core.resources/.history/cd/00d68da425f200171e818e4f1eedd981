package controllers;

import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import data.TodoDAO;
import entities.Todo;

@RestController
public class TodosController {
	
	@Autowired
	private TodoDAO tododao; 


	@RequestMapping(path="/user/{uid}/todo", method=RequestMethod.GET)
	public List<Todo> index(HttpServletRequest req, HttpServletResponse res, @PathVariable int uid){
		return tododao.index(uid);

}
	
	 // note: if forget @PathVariable, will get: Optional int parameter 'uid' is present but cannot be translated into a null value due to being declared as a primitive type.
//  GET /user/{uid}/todo/{tid}
    @RequestMapping(path="/user/{uid}/todo/{tid}", method=RequestMethod.GET)
    public Todo show(HttpServletRequest req, HttpServletResponse res, @PathVariable int uid, @PathVariable int tid) {
        Todo td = tododao.show(uid, tid);
        if (td == null)
            res.setStatus(400);
        else
            res.setStatus(201);
        return td;
    }
	
//  POST /user/{uid}/todo
    @RequestMapping(path="/user/{uid}/todo", method=RequestMethod.POST)
    public Todo create(HttpServletRequest req, HttpServletResponse res, @PathVariable int uid, @RequestBody String todoJson)
    {
        Todo td = null;
        
        try {
            td = tododao.create(uid, todoJson);
            if (td == null)
                res.setStatus(400);
            else
                res.setStatus(201);
            return td;
        }
        catch(Exception e) {
            e.printStackTrace();
            return null;
        }
    }


}
